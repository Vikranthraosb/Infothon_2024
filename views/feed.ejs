<% include ./header.ejs %>

<div class="w-full min-h-screen bg-gray-900 px-10 py-8">
    <div class="cards flex flex-wrap gap-10">

        <% posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class="w-full h-40 bg-red-600 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm text-white"><%= elem.title %></h5>
                <h4 class="mt-2 text-sm opacity-500 text-white"><%= elem.user.username %></h4>
            </div>
        <% }); %>

    </div>
</div>
<% include ./footer.ejs %>
